{   
    "type": "yawik-module",
    "name": "personalwerk/form2mail",
    "description": "offers an application form for a job posting, which can be send by mail",
    "license": "MIT",
    "authors": [
        {
            "name": "Carsten Bleek",
            "email": "bleek@cross-solution.de"
        }
    ],
    "config": {
        "platform": {
            "ext-mongo": "1.6.16"
        },
        "process-timeout": 0
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
      "yawik/application-pack": "*",
        "yawik/organizations": "^0.32.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "yawik/behat": "^0.32@dev"
    },
    "autoload": {
        "psr-4": { "Form2Mail\\": "src/"}
    },
    "autoload-dev": {
	"psr-4": {
            "Form2MailTest\\": "test/Form2MailTest/",
	    "CoreTestUtils\\": "vendor/yawik/core/test/CoreTestUtils/"
	},
        "psr-0": {
            "": "test/"
        }
    },
    "scripts": {
        "auto-scripts": [
            "npm install"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "serve": "php -S localhost:8000 -t test/sandbox/public",
        "start-selenium": "./vendor/bin/selenium-server-standalone -p 4444 -Dwebdriver.chrome.driver=./vendor/bin/chromedriver",
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.32-dev"
        },
        "zf": {
            "module": "XForm2Mail"
        }
    }

    
}
